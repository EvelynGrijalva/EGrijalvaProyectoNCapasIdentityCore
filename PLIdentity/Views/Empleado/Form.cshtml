
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h1 class="text-center" style="font-family:'Times New Roman', Times, serif">Empleado</h1></center>
<br />
<h4 class="text-center" style="font-family:'Times New Roman', Times, serif">Ingrese los datos del Empleado</h4>
<hr />

<div class="text-center">
    <form asp-controller="Empleado" asp-action="Form" method="POST" class="col-md-6 offset-md-3">
        <input hidden name="NumeroEmpleado" value="@Model.NumeroEmpleado" />
        
        <div class="row">        
            <div class="col-m-3">
        <div class="form-group m-4">
            <label for="nombre" class="mb-1"><i class="fas fa-user"></i> Nombre:</label>
            <input type="text" id="nombre" name="nombre" value="@Model.Nombre" class="form-control" required>
        </div>
            </div>
            <div class="col-m-3">
        <div class="form-group m-4">
            <label for="apellidoPaterno" class="mb-1"><i class="fas fa-user"></i> Apellido Paterno:</label>
            <input type="text" id="apellidoPaterno" name="apellidoPaterno" value="@Model.ApellidoPaterno" class="form-control" required>
        </div>
        </div>
            <div class="col-m-3">
        <div class="form-group m-4">
            <label for="apellidoMaterno" class="mb-1"><i class="fas fa-user"></i> Apellido Materno:</label>
            <input type="text" id="apellidoMaterno" name="apellidoMaterno" value="@Model.ApellidoMaterno" class="form-control" required>
        </div>    
        </div>
        </div>
        <div class="form-group m-3">
            <label for="correo" class="mb-1"><i class="fas fa-user"></i> RFC:</label>
            <input type="text" id="Rfc" name="Rfc" value="@Model.Rfc" class="form-control" required>
        </div>
        <div class="row">
            <div class="form-group m-3">
                <label for="correo" class="mb-1"><i class="fas fa-user"></i> NSS:</label>
                <input type="text" id="Nss" name="Nss" value="@Model.Nss" class="form-control" required>
            </div>
        <div class="form-group m-3">
            <label for="correo" class="mb-1"><i class="fas fa-user"></i> Correo:</label>
            <input type="text" id="correo" name="correo" value="@Model.Email" class="form-control" required>
        </div>
            <div class="form-group m-3">
                <label for="correo" class="mb-1"><i class="fas fa-user"></i> Telefono:</label>
                <input type="text" id="telefono" name="telefono" value="@Model.Telefono" class="form-control" required>
            </div>
        </div>

        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
    </form>
</div>

